.io-nav
  box-shadow(4px 0px 6px rgba(0,0,0,.1))
  flex-element(1 0 auto)
  flex-direction(row)
  flex-wrap(nowrap)
  flex-container()
  background-color white
  min-height 100%
  min-width 50px
  max-width 50px
  height 100%
  z-index 3
  left 0
  top 0
  opacity 0
  // display none
.io-nav-inner
  flex-container()
  flex-element(1 0 auto)
  flex-direction(column)
  min-height 100vh
  height 100vh
  position relative
  min-width 100%
  min-height 100%
  height 100%

.io-nav-header
  height: 200px

.io-nav-mini-name
  align-items(center)
  padding-left 18px
  padding-top 70px
  font-weight 700

.io-nav-text
  display none

.io-navigation
  flex-container()
  flex-element(1 0 auto)
  flex-direction(column)
  // margin-top 10px


.io-navigation-item
  flex-container()
  align-items(center)
  justify-content(center)
  flex-direction(row)
  // padding 4px 0 4px 24px
  width 100%
  cursor pointer
  text-align center
  padding-top 15px
  padding-bottom 15px
  border-bottom 1px solid #eeeeee


  &.active,
  &:active,
  &:hover
    background rgba(0,0,0,.03)

  & > i
    line-height 40px
    max-height 40px

.io-navigation-item-text
  display none

@media only screen and (min-width 768px)
  .io-nav
    flex-element(0 0 250px)
    min-width 250px
    position relative
    // background-color rgba(0,0,0,0)

  .io-nav-inner
    flex-direction(column)
    min-height 100vh
    height 100vh

  .io-nav-header
    center-flex(1 0 auto)
    flex-direction(column)
    width 100%
    max-height 200px
    border-bottom 1px solid $lightgrey

  .io-nav-mini-name
    display: none

  .io-nav-title

    padding-top 25px
    padding-bottom 25px
    // center-flex(0 0 100px)
    .userIcon
      center-flex(0 0 100px)
      border-radius(100%)
      box-shadow($shadow-small)
      width 100px
      height 100px
      background white
      i
        font-size 4rem

  .io-nav-text
    center-flex(1 0 auto, center)
    width 100%
    flex-direction(column)
    .io-nav-header-name
      text-align right
      font-weight 100
      font-size 2rem
      width 80%
      strong
        font-weight 700

  .io-nav-header-email
    font-size 12px
    text-align right
    width 80%

  .io-navigation
    flex-container()
    flex-element(1 0 auto)
    flex-direction(column)
    margin-top 10px
    background white


    .io-navigation-item
      flex-container()
      flex-direction(row)
      width 100%
      padding 4px 0 4px 24px
      cursor pointer
      &.active,
      &:active,
      &:hover
        background rgba(0,0,0,.03)

      i
        line-height 40px
        max-height 40px



    .io-navigation-item-text
      flex-container()
      flex-element(1 0 auto)
      align-items(center)
      padding-left 24px
      font-weight 700
